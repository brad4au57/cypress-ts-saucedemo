{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    /* Modules */
    "module": "commonjs",
    "types": ["cypress", "node"],
    "resolveJsonModule": true,
    /* Emit */
    "outDir": "./dist",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["cypress/**/*.ts", "./cypress/cypress.d.ts"]
}
